<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_bank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_mine"
        android:layout_margin="@dimen/spacing_20"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_bank"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ping_an"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/text_size_14"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="@dimen/spacing_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ping_an"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/text_size_14"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bank_no"
        android:layout_toRightOf="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_card_no"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_10"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/gray_333"/>

    <ImageView
        android:id="@+id/iv_delect"
        android:layout_width="@dimen/spacing_20"
        android:layout_height="@dimen/spacing_20"
        android:src="@mipmap/ic_mine"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_20"/>


</RelativeLayout>